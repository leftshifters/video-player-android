<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vxtindia.samplevideoplayer.samplevideoplayer" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.vxtindia.samplevideoplayer.samplevideoplayer.SampleVideoPlayerActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vxtindia.androidvideolibrary.app.VideoPlayerActivity"
            android:configChanges="orientation|screenSize"
            android:parentActivityName="com.vxtindia.samplevideoplayer.samplevideoplayer.SampleVideoPlayerActivity"
            android:theme="@style/FullscreenTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vxtindia.samplevideoplayer.samplevideoplayer.SampleVideoPlayerActivity" />

        </activity>
    </application>

</manifest>
